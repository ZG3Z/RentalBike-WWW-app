<%- include('../../fragments/header.ejs')%>

    <main>
        <h2>Nowe wypożyczenie</h2>
        <form class="form" novalidate onsubmit="return validateForm();">
            <label for="personData">Imię i nazwisko: <span class="symbol-required">*</span></label>
            <select name="personData" id="personData">
                <option value="">--Wybierz osobę wypożyczającą--</option>
                <option value="1">Jan Kowalski</option>
                <option value="2">Anna Nowak</option>
            </select>
            <span id="errorPersonData" class="errors-text"></span>
            <label for="bikeData">Model i marka: <span class="symbol-required">*</span></label>
            <select name="bikeData" id="bikeData">
                <option value="">--Wybierz wypożyczony rower--</option>
                <option value="1">Specialized Rockhopper</option>
                <option value="2">Unibike Indiana</option>
                <option value="3">Cube SL Road</option>
            </select>
            <span id="errorBikeData" class="errors-text"></span>
            <label for="dateFrom">Data od: <span class="symbol-required">*</span></label>
            <input type="date" name="dateFrom" id="dateFrom" required>
            <span id="errorDateFrom" class="errors-text"></span>
            <label for="dateTo">Data do: <span class="symbol-required">*</span></label>
            <input type="date" name="dateTo" id="dateTo" required>
            <span id="errorDateTo" class="errors-text"></span>
            <div class="form-buttons">
                <p id="errorsSummary" class="errors-text"></p>
                <input type="submit" value="Dodaj" class="form-button-submit">
                <a href="list.html" class="form-button-cancel">Anuluj</a>
             </div>
        </form>
    </main>
    
<%- include('../../fragments/footer.ejs')%>