<%- include('../../fragments/header.ejs')%>

    <main>
        <h2>Lista klientów</h2>
       <table class="table-list">
            <thead>
                <tr>
                    <th>Imię</th>
                    <th>Nazwisko</th>
                    <th>Telefon</th>
                    <th>E-mail</th>
                    <th>Akcje</th>
                </tr>
            </thead>
            <tbody>
            <% for (let customer of customers) { %>    
                <tr>
                    <td><%=customer.Name%></td>
                    <td><%=customer.Surname%></td>
                    <td><%=customer.Telephone%></td>
                    <td><%=customer.Email%></td>
                    <td>
                        <ul class="list-actions">
                            <li><a href="/customers/details/<%=customer.ID_customer%>" class="list-actions-button-details">Szczegóły</a></li>
                            <li><a href="/customers/edit/<%=customer.ID_customer%>" class="list-actions-button-edit">Edytuj</a></li>
                            <li><a href="/customers/delete/<%=customer.ID_customer%>" class="list-actions-button-delete">Usuń</a></li>
                        </ul>
                    </td>
                </tr>
            <% } %>    
            </tbody>
       </table>
    <p><a href="/customers/add" class="button-add"> Dodaj nowego klienta</a></p>
    </main>

<%- include('../../fragments/footer.ejs')%>